<?xml version="1.0"?>
<config>
  <modules>
    <Sonic_ActualPrice>
      <version>0.1.0</version>
    </Sonic_ActualPrice>
  </modules>
  <global>
    <helpers>
      <actualprice>
        <class>Sonic_ActualPrice_Helper</class>
      </actualprice>
    </helpers>
	<models>
	  <actualprice>
		<class>Sonic_ActualPrice_Model</class>
		<resourceModel>actualprice_mysql4</resourceModel>
	  </actualprice>
	</models>
	<blocks>
		<adminhtml>
			<rewrite>
				<sales_order_totals>Sonic_ActualPrice_Block_Adminhtml_Sales_Order_Totals</sales_order_totals>
				<sales_order_grid>Sonic_ActualPrice_Block_Adminhtml_Order_Grid</sales_order_grid>
			</rewrite>
		</adminhtml>
	</blocks>
	<resources>
	  <actualpriceattribute_setup>
		<setup>
		  <module>Sonic_ActualPrice</module>
		  <class>Sonic_ActualPrice_Model_Resource_Setup</class>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </actualpriceattribute_setup>
	  <actualpriceattribute_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </actualpriceattribute_write>
	  <actualpriceattribute_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </actualpriceattribute_read>
	</resources>
	<fieldsets>
        <sales_convert_quote_item>
            <actual_price>
                <to_order_item>*</to_order_item>
            </actual_price>
        </sales_convert_quote_item>
    </fieldsets>
    <sales>
        <quote>
            <item>
                <product_attributes>
                    <actual_price />
                </product_attributes>
            </item>
        </quote>
    </sales>
    <events>
        <sales_quote_item_set_product>
            <observers>
                <actualprice>
                    <class>Sonic_ActualPrice_Model_Observer</class>
                    <method>setActualPrice</method>
                </actualprice>
            </observers>
        </sales_quote_item_set_product>
    </events>	
  </global>
  <adminhtml>
	 <layout>
			<updates>
				<actualprice>
					<file>actualprice.xml</file>
				</actualprice>
		 </updates>   
		</layout>
	</adminhtml>
</config> 